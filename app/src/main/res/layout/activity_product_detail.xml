<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abnd.mdiaz.inventoryapp.ProductDetail">

    <ImageView
        android:id="@+id/dt_pro_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="8dp"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/dt_pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Product Name"
        android:layout_below="@+id/dt_pro_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dt_pro_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Supplied by: Generic Supplier"
        android:layout_below="@+id/dt_pro_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dt_pro_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Quantity: 10"
        android:layout_below="@+id/dt_pro_supplier"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dt_pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="64dp"
        tools:text="$ 9.99"
        android:layout_below="@+id/dt_pro_quantity"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
